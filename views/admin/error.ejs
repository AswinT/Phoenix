<%- include('../partials/admin/sidebar') %>

<!-- Main Content -->
<div class="main-content">
  <div class="page-header d-flex justify-content-between align-items-center">
    <div>
      <h1 class="page-title">Error Occurred</h1>
      <p class="text-muted mb-0">Something went wrong with your request.</p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="chart-card">
        <div class="chart-header">
          <h2 class="chart-title">Error Details</h2>
        </div>
        <div class="p-4 text-center">
          <i class="ri-error-warning-line text-danger" style="font-size: 64px;"></i>
          <h3 class="my-4">An Error Has Occurred</h3>
          <div class="alert alert-danger">
            <%= message || 'An unexpected error occurred. Please try again.' %>
          </div>
          <div class="mt-4">
            <a href="/admin/adminDashboard" class="btn btn-primary">
              <i class="ri-home-4-line me-1"></i> Return to Dashboard
            </a>
            <button class="btn btn-secondary ms-2" onclick="history.back()">
              <i class="ri-arrow-go-back-line me-1"></i> Go Back
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script> 