    z-index: -1;
  }

  .curator-avatar {
    width: 5rem;
    height: 5rem;
    background-color: #f8f9fa;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #6b7280;
    border: 3px solid #e5e5e5;
  }

  .promise-card {
    border-left: 4px solid #000;
  }

  .promise-icon {
    width: 2.5rem;
    height: 2.5rem;
    background-color: #f8f9fa;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  @media (max-width: 768px) {
    .about-logo {
      max-width: 200px;
    }

    .curator-card {
      padding: 2rem !important;
    }

    .promise-card {
      padding: 2rem !important;
    }
  }

  @media (max-width: 576px) {
