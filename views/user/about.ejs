  .about-image-container {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .about-logo {
    max-width: 300px;
    width: 100%;
    height: auto;
  }

  .about-image-container::before {
    content: "";
    position: absolute;
    top: -10px;
    left: -10px;
